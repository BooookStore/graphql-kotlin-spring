scalar Date
scalar Email

type Query {
    bookById(id: ID): Book
    hero(episode: Episode): Character
    authorByEmail(email: Email): Author
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
    age: Int
    birthDay: Date
    email: Email
}

type Character {
    name: String!
    appearsIn: [Episode!]!
}

enum Episode {
    NEW_HOPE
    EMPIRE
    JEDI
}
